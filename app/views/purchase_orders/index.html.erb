    <%= link_to 'New purchase order', new_purchase_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
<%= render 'shared/sidebar'%>

<div class="overflow-x-auto ml-20">
 <div class="overflow-x-auto">
    <table class="table-auto w-full mt-5">
      <thead>
        <tr>
          <th class="px-4 py-2">Total Price</th>

        </tr>
      </thead>
      <tbody>
        <%= render @purchase_orders %>
