<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl ml-20">Purchase orders</h1>
    <%= link_to 'New purchase order', ps_price_index_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
<%= render 'shared/sidebar'%>

<div class="overflow-x-auto ml-20">
  <table class="table-auto w-full table-fixed ml-10 ">
    <thead>
    <tr>
      <th class="px-4 py-2">Product Name</th>
      <th class="px-4 py-2">Price</th>
      <th class="px-4 py-2">Stuff Email</th>
      <th class="px-4 py-2">Details</th>
      <!--    <th class="px-4 py-2">Supplier Name</th>-->

    </tr>
    </thead>
    <tbody>
        <%= render @purchase_orders %>
      </tbody>
    </table>
  </div>
</div>
</div>
