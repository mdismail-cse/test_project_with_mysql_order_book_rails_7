<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing stuff</h1>

  <% if params[:format] == "1" %>
    <%= render "stuffs/update_genaral_info", stuff: @stuff %>
  <% else %>
    <%= render "stuffs/update_pass", stuff: @stuff %>
  <% end %>
  <%= link_to "Show this stuff", @stuff, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to stuffs", stuffs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
