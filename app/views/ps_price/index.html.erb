
<br>
<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl ml-20">Suppliers</h1>
  <%= link_to 'Create Now', ps_price_create_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>
<br>
<div>
<%= form_tag ps_price_create_path, method: :post do %>
  <table class="table-auto w-full">
    <thead>
      <tr>
        <th class="px-4 py-2">Product Name</th>
        <th class="px-4 py-2">Price</th>
        <th class="px-4 py-2">Supplier Name</th>
<!--        <th class="px-4 py-2"> Qty </th>-->
<!--        <th class="px-4 py-2">Select</th>-->

      </tr>
    </thead>
    <tbody>
      <% @product_suppliers.each do |ps| %>
          <tr>
            <td class="border px-4 py-2"><%= ps.product.title  %></td>
            <td class="border px-4 py-2"><%= ps.price  %></td>
            <td class="border px-4 py-2"><%= ps.supplier.name %></td>

<!--            <td class="border px-4 py-2">-->
              <%#= check_box_tag "selected_ps[]", [ps.id].join(',') %>
<!--            </td>-->
          </tr>
      <% end %>
    </tbody>
  </table>

  <%#= submit_tag "checkout", class: "mt-4 py-2 px-4 bg-blue-500 hover:bg-blue-600 rounded cursor-pointer" %>
<% end %>

</div>
