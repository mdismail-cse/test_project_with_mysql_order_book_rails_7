<%= form_with(model: department, local: true) do |form| %>
  <% if department.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-red-600 font-semibold mb-2"><%= pluralize(department.errors.count, 'error') %> prohibited this department from being saved:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% department.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: 'block font-semibold' %>
    <%= form.text_field :title, class: 'w-full p-2 border border-gray-300 rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block font-semibold' %>
    <%= form.text_area :description, class: 'w-full p-2 border border-gray-300 rounded' %>
  </div>

  <div>
    <%= form.submit 'Save', class: 'px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700' %>
  </div>
<% end %>
