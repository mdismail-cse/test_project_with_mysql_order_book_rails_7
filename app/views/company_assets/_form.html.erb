  <div class="mb-4">
    <%= form.label :asset_type_id, class: 'block font-semibold' %>
    <%= form.select :asset_type_id, AssetType.all.map { |asset| [asset.product_catagory, asset.id] }, {}, class: 'w-full p-2 border border-gray-300 rounded' %>
  </div>


  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
