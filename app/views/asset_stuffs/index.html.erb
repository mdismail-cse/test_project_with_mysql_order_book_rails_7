<div class="w-full ml-20">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Asset stuffs</h1>
    <%= link_to 'New asset stuff', new_asset_stuff_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="asset_stuffs" class="min-w-full">
    <%= render @asset_stuffs %>
  </div>
</div>
